.mymodal.width-800 
  .mymodal-title
    %h4 Active Reservations
  .mymodal-body
    %table.table
      %thead
        %tr
          %th Id
          %th Table #
          %th Name
          %th Phone
          %th Start at
          %th End at
          %th 
          %th
          %th
          
      %tbody
        - @reservations.each do |reservation|
          %tr
            %td= link_to reservation.id, reservation
            %td= reservation.table_number
            %td= reservation.name
            %td= reservation.phone
            %td= h_date reservation.start_at
            %td= h_date reservation.end_at
            %td= link_to 'Edit', edit_reservation_path(reservation)
            %td= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' }

    %br
    .center
      = link_to 'New Reservation', new_reservation_path, class: "btn btn-success"
